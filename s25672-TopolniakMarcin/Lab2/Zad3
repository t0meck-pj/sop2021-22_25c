#!/bin/bash
echo "[PATH]"
echo "Zmienna środowiskowa zawierająca uporządkowaną listę ścieżek"
echo "$PATH"
echo "[RANDOM]"
echo "Wewnętrzna funkcja Bash, która zwraca losową liczbę całkowitą z przedziału 0 - 32768"
echo "$RANDOM"
echo "[PWD]"
echo "Wyświetla pełną ścieżkę do obecnego katalogu roboczego"
echo "$PWD"
echo "[PS1]"
echo "Podstawowy znak zachęty"
echo "$PS1"
echo "[USER]"
echo "Zwraca nazwę aktualnego użytkownika"
echo "$USER"
echo "[HOSTNAME]"
echo "Zwraca nazwę hosta"
echo "$HOSTNAME"
echo "[OSTYPE]"
echo "Zwraca typ systemu operacyjnego"
echo "$OSTYPE"  
